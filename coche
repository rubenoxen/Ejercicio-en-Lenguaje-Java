 public class Coche {
    private int puertas;

    public Coche(int puertas) {
        this.puertas = puertas;
    }

    public void addPuertas (int puertas) {
        this.puertas += puertas;
    }

    public void printInfo() {
        System.out.println("Puertas:" + puertas);
    }

    public static void main(String[] args) {
        Coche coche = new Coche(4);
        coche.addPuertas(2);
        coche.printInfo();
    }
}
